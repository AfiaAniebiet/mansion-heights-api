<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= pageTitle %></title>
    <link rel="stylesheet" href="/css/apartment.css" />
  </head>
  <body>
    <header>
      <nav class="nav-bar">
        <div class="nav-center">
          <div class="nav-header">
            <h2 class="nav-logo">Lodge<span>Finder</span></h2>
          </div>

          <ul class="nav-links">
            <li><a href="/lodge-finder/apartments" class="nav-link">All Apartments</a></li>
            <li><a href="/lodge-finder/register" class="nav-link">Add Property</a></li>
            <li><a href="/lodge-finder/admin/users" class="nav-link">All Users</a></li>
          </ul>

          <p class="current-user">Logged in as: <%= userObj.fullName %></p>

          <div class="logout">
            <form action="/lodge-finder/user/logout" method="post">
              <button class="btn">Logout</button>
            </form>
          </div>
        </div>
      </nav>
    </header>

    <article class="features-card">
      <% for (let img of apartment.images) { %>
      <div class="feature-img-container">
        <img src="<%= img.url %>" class="feature-img" alt="" />
      </div>
      <% } %>
      <div class="feature-info">
        <div class="ownership">
          <h4>Home Owner: <%= apartment.user['fullName'] %></h4>
          <h4>Views: <%= apartment.view_count %> time(s)</h4>
          <h4>Home Type: <%= apartment.property_type %></h4>
        </div>
        <div class="home_info">
          <h4>Status: <%= apartment.status %></h4>
          <h4>Location: <%= apartment.location %></h4>
        </div>
        <p><%= apartment.description %></p>

        <% for (const feature of apartment.features){%>
        <ul>
          <li><%= feature %></li>
        </ul>
        <%} %>
      </div>

      <% if (userObj.role === 'Student'){%>
      <div class="btn">Process Lodge</div>
      <% } else { %>
      <div class="btns">
        <div class="btn">
          <a href="/lodge-finder/<%= apartment._id %>/edit">Edit</a>
        </div>

        <form action="/lodge-finder/<%= apartment._id %>?_method=DELETE" method="post">
          <button>DELETE</button>
        </form>
      </div>

      <%}%>
    </article>
  </body>
</html>
